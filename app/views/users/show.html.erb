<p id="notice"></p>

<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image("63x63") %>
  <% if @user == current_user %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
      </tbody>
    </table>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>